<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
    </style>


    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- toolbar 颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>

        <item name="actionOverflowMenuStyle">@style/MenuStyle</item>
    </style>

    <!--菜单样式-->
    <style name="MenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <!--菜单与toolbar的距离-->
        <item name="android:dropDownVerticalOffset">5dp</item>
        <!--菜单背景色-->
        <item name="android:popupBackground">?attr/colorPrimaryDark</item>
    </style>

    <!--卡片布局阴影效果-->
    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!--自定义 AppCompat全屏展示的style-->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
